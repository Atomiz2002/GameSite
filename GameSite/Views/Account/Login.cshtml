@model GameSite.Models.Account.Login

<form>
	<card class="card bg-dark border col-sm-7 col-md-5 col-lg-4 col-xl-3 mx-auto my-5">
		<div class="card-header text-center mt-3" style="font-size: 2.25rem; font-weight: bold">Login</div>
		<div class="card-body text-center">
			<input asp-for="Email" type="email" class="form-control bg-dark text-light text-center" placeholder="Example@@mail.com">
			<div class="card-group input-group mt-2">
				<input asp-for="Password" type="password" class="form-control bg-dark text-light text-center" placeholder="Password">
				<i class="btn btn-outline-light bi bi-eye-slash" onclick="togglePassword(this)"></i>
			</div>
			<button type="submit" class="btn btn-light mt-4 w-50">Login</button>
		</div>
	</card>
</form>

@section Scripts {
	<script src="~/js/passwordVisibility.js"></script>
}